<Window x:Class="MultiTenantApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor Multi-Empresa"
        Height="600"
        Width="1000"
        Background="{StaticResource MainBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con info de tenant y botÃ³n cambiar empresa -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Empresa Actual:" 
                                   Foreground="White" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentTenantName}" 
                                   Foreground="White" 
                                   FontSize="16"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="ðŸ”„ Cambiar Empresa"
                        Command="{Binding ChangeTenantCommand}"
                        Style="{StaticResource AccentButton}"
                        Padding="15,10"
                        Height="40"/>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <ContentControl Grid.Row="1" 
                       Content="{Binding CurrentView}"
                       Margin="20"/>
    </Grid>
</Window>